{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "ES2015",
    "target": "es2015",
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}