{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src", "webpack.config.ts", "webpack.dev.ts", "webpack.prod.ts"]
}